/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  /* display: none; */
  position: fixed;
  width: 100%;
  top: 0;
  color: #000;
  z-index: 999;
  overflow: hidden;
}
/* 背景图 */
.backgroundimg {
  position: absolute;
  z-index: -1;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 450;
  display: flex;
flex-direction: column;
justify-content: center;
text-align: center;
align-items: center;

}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  justify-content: space-between;
  height: 100%;
  height: 40rpx;
  margin-top: 3rpx;
  color: black;
}

.back-pre {
  width: 32rpx;
  height: 36rpx;
  margin-top: 4rpx;
  padding: 10rpx;
}

.nav-title .input {
  width: 200rpx;
  height: 65rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: black;
  opacity: 0.3;
  border-radius: 35rpx;
}

.nav-title .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.nav-title .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: white;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.bgc{
  background-color: white;
}